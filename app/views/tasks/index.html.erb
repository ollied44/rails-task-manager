<div class="container mt-5" style="max-width: 700px;">
  <h1 class="mb-4">My tasks</h1>

  <ul class="list-unstyled">
    <% @tasks.each do |task| %>
      <li class="mb-2 d-flex align-items-center">
        <input type="checkbox" class="form-check-input me-2" disabled <%= "checked" if task.completed %>>

        <%= link_to task.title, task_path(task), class: "me-2 text-decoration-none" %>

        <%= button_to delete_task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class: "btn btn-link p-0 text-danger" do %>
  <i class="bi bi-trash-fill"></i>
<% end %>
      </li>
    <% end %>
  </ul>

  <div class="mt-4">
    <%= link_to new_task_path, class: "text-primary text-decoration-none fw-semibold" do %>
      <i class="bi bi-plus-lg"></i> Add a new task
    <% end %>
  </div>
</div>
